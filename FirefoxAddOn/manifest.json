{
  "name": "SmartAdmin Login Assistant",
  "description": "An extension to enhance the SmartAdmin login experience.",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "48": "logo-48.png",
    "96": "logo-96.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": "logo.png"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://stg.uparcel.sg/*",
    "https://www.uparcel.sg/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://stg.uparcel.sg/admin/login/",
        "https://www.uparcel.sg/admin/login/"
      ],
      "js": ["login.js"]
    },
    {
      "matches": [
        "https://stg.uparcel.sg/admin/otp/*",
        "https://www.uparcel.sg/admin/otp/*"
      ],
      "js": ["otpauth.umd.min.js", "otp.js"]
    },
    {
      "matches": [
        "https://stg.uparcel.sg/admin/",
        "https://www.uparcel.sg/admin/",
        "https://stg.uparcel.sg/admin/jobs/",
        "https://www.uparcel.sg/admin/jobs/"
      ],
      "js": ["home.js"]
    },
    {
      "matches": [
        "https://stg.uparcel.sg/admin/view_profile/",
        "https://www.uparcel.sg/admin/view_profile/"
      ],
      "js": ["profile.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "smartadmin-login@uparcel.sg",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}